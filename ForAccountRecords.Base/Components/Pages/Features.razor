@page "/features"
@rendermode InteractiveServer

<PageTitle>Features</PageTitle>
<!-- features section -->
<section class="pt-6 pb-7" id="features">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center">
                <h2 class="heading-black">Features</h2>
                <p class="text-muted lead">
                    We generate financial documents for individuals that wishes to track their finacial activities.
                </p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-10 mx-auto">
                <div class="row feature-boxes">
                    <div class="col-md-6 box">
                        <div class="icon-box box-primary">
                            <div class="icon-box-inner">
                                <span data-feather="edit-3" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Financial Statements</h5>
                        <p class="text-muted">
                            Generate your financial statements: Income Statement, Balance sheet, Cash Flow statement and Statement Changes and Equity
                        </p>
                    </div>
                    <div class="col-md-6 box">
                        <div class="icon-box box-success">
                            <div class="icon-box-inner">
                                <span data-feather="monitor" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Subsidiary Books</h5>
                        <p class="text-muted">
                            We provide Subsediary books: Cashbook, Sales Return Book, Sales book, Bills Recievable book, Purchase book, Journal, Purchase returns book and Bills Payable Book
                        </p>
                    </div>
                    <div class="col-md-6 box">
                        <div class="icon-box box-danger">
                            <div class="icon-box-inner">
                                <span data-feather="layout" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Ledger Accounts</h5>
                        <p class="text-muted">
                            We generate the ledger and some of the Ledger Account like Purchase Account and the Sales Account
                        </p>
                    </div>
                    <div class="col-md-6 box">
                        <div class="icon-box box-info">
                            <div class="icon-box-inner">
                                <span data-feather="globe" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Cross Platform</h5>
                        <p class="text-muted">
                            One Account Everywere you go. Take your tracker with you everywhere you go.
                        </p>
                    </div>
                </div>
            </div>
        </div>
